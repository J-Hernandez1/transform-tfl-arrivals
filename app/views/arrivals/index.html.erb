<h1>Next Arrivals at Great Portland Street</h1>
<table class="table">
  <thead>
    <tr>
      <th>Line</th>
      <th>Destination</th>
      <th>Expected Arrival</th>
      <th>Platform</th>
    </tr>
  </thead>
  <tbody>
    <% @arrivals.each do |arrival| %>
        <td><%= arrival.line_name %></td>
        <td><%= arrival.destination_name %></td>
        <td><%= Time.at(arrival.expected_arrival.to_datetime.to_i).strftime("%H:%M:%S") %></td>
        <td><%= arrival.platform_name || 'N/A' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
